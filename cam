-- Katana's Cam with Pop-Up Message and Enjoy Button

-- Services
local Players = game:GetService("Players")
local Player = Players.LocalPlayer

-- Create ScreenGUI
local ScreenGUI = Instance.new("ScreenGui")
ScreenGUI.Parent = Player:WaitForChild("PlayerGui")

-- Pop-Up Frame
local PopUpFrame = Instance.new("Frame")
PopUpFrame.Size = UDim2.new(0, 300, 0, 150)
PopUpFrame.Position = UDim2.new(0.5, -150, 0.5, -75)
PopUpFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
PopUpFrame.BackgroundTransparency = 0.2
PopUpFrame.Parent = ScreenGUI

-- Pop-Up Label
local PopUpLabel = Instance.new("TextLabel")
PopUpLabel.Size = UDim2.new(1, 0, 0.6, 0)
PopUpLabel.Position = UDim2.new(0, 0, 0, 0)
PopUpLabel.BackgroundTransparency = 1
PopUpLabel.Text = "Loading Katana's Cam..."
PopUpLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
PopUpLabel.TextSize = 20
PopUpLabel.Font = Enum.Font.GothamBold
PopUpLabel.Parent = PopUpFrame

-- Enjoy Button
local EnjoyButton = Instance.new("TextButton")
EnjoyButton.Size = UDim2.new(0.8, 0, 0.2, 0)
EnjoyButton.Position = UDim2.new(0.1, 0, 0.7, 0)
EnjoyButton.BackgroundColor3 = Color3.fromRGB(50, 150, 50)
EnjoyButton.Text = "Enjoy!"
EnjoyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
EnjoyButton.TextSize = 18
EnjoyButton.Font = Enum.Font.Gotham
EnjoyButton.Visible = false
EnjoyButton.Parent = PopUpFrame

-- Load the Script with Debug Message
print("Attempting to fetch the script from the URL...") -- Debug message
local success, errorMessage = pcall(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/Katanaloll/cam/refs/heads/main/cam"))()
end)

if success then
    print("Script loaded successfully!")
    PopUpLabel.Text = "Finished Loading!"
    EnjoyButton.Visible = true -- Show the Enjoy button
    EnjoyButton.MouseButton1Click:Connect(function()
        PopUpFrame:Destroy() -- Remove the pop-up when the button is clicked
    end)
else
    print("Failed to load the script. Error: " .. errorMessage)
    PopUpLabel.Text = "Failed to Load Script"
    EnjoyButton.Text = "Close"
    EnjoyButton.Visible = true -- Show the Enjoy button in case of error
    EnjoyButton.MouseButton1Click:Connect(function()
        PopUpFrame:Destroy() -- Remove the pop-up when the button is clicked
    end)
end

